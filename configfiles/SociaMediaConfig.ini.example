# Configuration file for Social Media Python Publisher
[Email]
sender = your-email@gmail.com  # Your email address (Gmail or other)
recipient = recipient@example.com  # Recipient email address
smtp_server = smtp.gmail.com  # SMTP server address (Gmail: smtp.gmail.com, Outlook: smtp.office365.com)
smtp_port = 587  # SMTP port (587 for TLS, 465 for SSL, 25 for unencrypted)

[Instagram]
name = your_instagram_username  # Your Instagram account username (without @)

[Dropbox]
image_folder = /YourFolder/Images  # Dropbox folder path where your images are stored

[Content]
hashtag_string = #photography #art #creative  # Hashtags to append to each post
archive = True  # Archive images after successful posting (True/False)
telegram = False  # Enable Telegram posting (True/False)
fetlife = False  # Enable email posting (True/False)
instagram = True  # Enable Instagram posting (True/False)
debug = False  # Debug mode - posts but doesn't archive (True/False)

[Replicate]
# Replicate model for image analysis (BLIP-2 recommended)
model = andreasjansson/blip-2:f677695e5e89f8b236e52ecd1d3f01beb44c34606419bcc19345e046d8f786f9

[openAI]
engine = gpt-3.5-turbo  # OpenAI model (gpt-3.5-turbo or gpt-4)
# System prompt - defines AI behavior and expertise
systemcontent = You are an expert in social media focused on helping photographers getting more followers.
# Role prompt - instruction prefix for caption generation
rolecontent = Write me a caption for a photograph that shows